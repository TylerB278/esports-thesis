---
import Layout from "@layouts/Layout.astro";
import SampleComponent from "@components/SampleComponent.astro";
import Container from "@components/Container.astro";
import AstroLogo from "@assets/images/astro-logo-light-gradient.png";
import { Content as SampleMarkdown } from "@content/sample-markdown.md";
import { Image } from "astro:assets";
import ProjectList from "@components/ProjectList.astro";
---

<Layout title="Astro Starter">
  <div class="heroSect">
    <h1 class="title th1">Tyler Boggi</h1>
    <img src="/tyLogo.png" class="title timg"></img>
    <h2 class="title th2">Graphic Designer</h2>
  </div>
  <nav></nav>
  <Container>

  <ProjectList />
    
  </Container>
  <div class="test"></div>
</Layout>

<style>

nav{
  position: sticky;
  top: 0px;
  background-color: red;
  width: 100%;
  height: 10vh;
}

.heroSect{
  background-color: black;
  width: 100%;
  height: 100vh;
}

.title{

  transform-origin: center;
  color: white;
  font-family: "Inter", sans-serif;
  font-size: 10vw;
  font-optical-sizing: auto;
  font-weight: 900;
  font-style: italic;
} 

@keyframes popIn {
  from { transform: scale(0%); }
  to { transform: scale(100%); }
}
@keyframes LtR {
  from { margin-left: -60%; }
  to { margin-left: 5%; }
}
@keyframes RtL {
  from { margin-left: 120%; }
  to { margin-left: 25%; }
}

.th1{ 
  font-size: 10vw; 
  width: 100%; 
  margin-left: 5%;
  padding-top: 60px; 
  margin-bottom: -60px; 
  animation: LtR 2s;
}
.th2{ 
  z-index: -10; 
  font-size: 8vw; 
  width: 100%; 
  margin-top: -60px; 
  margin-left: 25%; 
  animation: RtL 2s;
}
.timg{ 
  z-index: 10; 
  width: 40%; 
  max-width: 500px; 
  margin: 0 auto;
  transform: scale(100%);
  animation: popIn 1s;
}

.test{height: 1000px;}

</style>